<div id="<%= dom_id habit %>" data-controller="habit">
  <div class="
    border-2
    border-black
    hover:border-green
    rounded
    <%= habit.done_today ? "bg-red-500" : "bg-green-500" %>
    grid
    grid-cols-3
  "
  data-habit-target="habit">
    <h3 class="text-right">🏆 <%= habit.hot_record %></h3>
    <div>
      <h2 class="text-center"><%= habit.name %></h2>
      <h4 class="text-center italic">Last done: <%= habit.last_done %></h4>
    </div>
    <h3>
      <% if habit.hot_streak > habit.cold_streak %>
        <%= "🔥 #{habit.hot_streak}" %>
      <% else %>
        <%= "🚫 #{habit.cold_streak}" %>
      <% end %>
    </h3>
  </div>
  <% if action_name != "show" %>
    <%= link_to "Show this habit", habit, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this habit', edit_habit_path(habit), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
