 <% if notice %>
  <div id="notice" class="alert alert-info alert-dismissible fade show m-1 py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" role="alert">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
      X</button>
  </div>
<% end %>
<% if alert %>
  <div id="alert" class="alert alert-warning alert-dismissible fade show m-1 py-2 px-3 bg-yellow-50 mb-5 text-yellow-500 font-medium rounded-lg inline-block" role="alert">
    <%= alert %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
      X</button>
  </div>
<% end %>
